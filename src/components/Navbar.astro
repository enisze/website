---
import { Astronav, MenuIcon, MenuItems } from 'astro-navbar'
import Item from './Item.astro'
import ThemeIcon from './ThemeIcon.astro'

const menuitems = [
    {
        title: 'About',
        path: '/#about',
    },
    {
        title: 'Skills',
        path: '/skills',
    },
    {
        title: 'Projects',
        path: '/projects',
    },
    {
        title: 'Experience',
        path: '/experience',
    },
    {
        title: 'Education',
        path: '/education',
    },
    {
        title: 'Contact',
        path: '/contact',
    },
]
---

<header
    class="flex flex-col lg:flex-row items-center lg:my-0 fixed top-0 left-0 w-full"
>
    <Astronav>
        <div
            class="flex whitespace-nowrap lg:w-fit z-20 p-5 h-20 w-full items-center justify-between bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-600"
        >
            <a href="/">Enis Zejnilovic</a>
            <div
                class="lg:hidden bg-inherit flex items-center gap-x-2 bg-white dark:bg-gray-900"
            >
                <ThemeIcon />
                <div class="block lg:hidden">
                    <MenuIcon />
                </div>
            </div>
        </div>
        <MenuItems class="hidden w-full lg:flex">
            <ul
                class="absolute lg:relative lg:h-20 top-16 lg:top-0 right-3 flex w-fit lg:w-full p-5 lg:rounded-b-none lg:items-center flex-col lg:flex-row lg:gap-3 items-end bg-white dark:bg-gray-900 rounded-b-xl lg:border-b border border-gray-200 dark:border-gray-600 lg:justify-center"
            >
                {
                    menuitems.map((item, index) => (
                        <li>
                            <Item href={item.path}>{item.title}</Item>
                        </li>
                    ))
                }
            </ul>
        </MenuItems>

        <div
            class="hidden lg:flex z-20 w-fit bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-600 h-20 pr-4"
        >
            <ThemeIcon />
        </div>
    </Astronav>
</header>
