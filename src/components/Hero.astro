---
import Component from './Component.astro'
---

<Component>
    <section class="hero">
        <div class="hero__text">
            <h1 class="hero__title">Software Engineer and Project Manager</h1>
            <p class="hero__subtitle">
                Passionate about building great software and leading teams to
                success.
            </p>
            <a href="#contact" class="btn btn--primary">Get in touch</a>
        </div>
        <div class="hero__image">
            <img
                src="/images/hero.jpg"
                alt="Software engineer working on a laptop"
            />
        </div>
    </section>
</Component>
