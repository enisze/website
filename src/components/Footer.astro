---
import Component from './Component.astro'
---

<Component>
    <footer class="footer">
        <ul class="footer__list">
            <li class="footer__item"><a href="#about">About</a></li>
            <li class="footer__item"><a href="#skills">Skills</a></li>
            <li class="footer__item"><a href="#experience">Experience</a></li>
            <li class="footer__item"><a href="#education">Education</a></li>
            <li class="footer__item"><a href="#contact">Contact</a></li>
        </ul>
        <div class="footer__social">
            <a
                href="https://www.linkedin.com/in/yourname"
                target="_blank"
                rel="noopener"
            >
                <i class="fab fa-linkedin-in">LinkedIn</i>
            </a>
            <a
                href="https://github.com/yourusername"
                target="_blank"
                rel="noopener"
            >
                <i class="fab fa-github">GitHub</i>
            </a>
            <a
                href="mailto:youremail@example.com"
                target="_blank"
                rel="noopener"
            >
                <i class="fas fa-envelope">E-Mail</i>
            </a>
        </div>
        <p class="footer__text">&copy; 2023 Your Name</p>
    </footer>
</Component>
