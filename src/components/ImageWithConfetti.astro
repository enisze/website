---
import { Image } from 'astro:assets'
---

<Image
    src="/images/me.webp"
    alt="Enis Zejnilovic"
    width={200}
    height={200}
    class="flex-grow w-full cursor-pointer m-auto p-1 rounded-full ring-2 ring-blue-800 dark:ring-blue-400/80"
    id="me"
/>

<script>
    import confetti from 'canvas-confetti'
    const img = document.body.querySelector('#me')

    if (img) {
        img.addEventListener('click', () => confetti())
    }
</script>
