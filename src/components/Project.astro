---
import { Image } from 'astro:assets'

type Props = {
    src: string
    alt: string
    githubLink?: string
    pageLink?: string
    localLink?: string
    title: string
    description: string
}

const { src, alt, description, title, githubLink, pageLink, localLink } =
    Astro.props
---

<div
    class="flex flex-col md:flex-row h-full rounded-xl shadow-lg shadow-slate-950"
>
    {
        src ? (
            <a href={localLink}>
                <Image
                    src={src}
                    alt={alt}
                    width={932}
                    height={910}
                    class={`rounded-xl md:rounded-r-none md:max-w-[40vw] md:h-full`}
                    decoding="async"
                    format="avif"
                    loading="lazy"
                />
            </a>
        ) : (
            <slot />
        )
    }

    <div class="flex self-center flex-col p-4 gap-y-2 w-full">
        <h1 class="text-xl font-bold">
            <a href={pageLink} target="_blank" rel="noopener noreferrer">
                {title}
            </a>
        </h1>
        <span>
            {description}
        </span>
    </div>
</div>
